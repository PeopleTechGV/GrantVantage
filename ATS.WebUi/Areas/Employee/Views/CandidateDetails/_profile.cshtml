@using BEClient = ATS.BusinessEntity
@model BEClient.CandidateProfileForPDF
@System.Web.Optimization.Styles.Render("~/Content/cssPrintProfile")
@{
    ViewBag.Title = "_profile";
    Layout = "~/Areas/Employee/Views/CandidateDetails/Index.cshtml";

    var CountSkills = Model.ObjContactSkills.Count();
    var CountEduBackground = Model.ObjContactEducations.Count() + Model.ObjContactLicenceAndCertifications.Count();
    var CountExtraCurr = Model.ObjContactPublicationHistory.Count() + Model.ObjContactSpeakingEventHistory.Count() + Model.ObjContactAssociations.Count() + Model.ObjContactLanguages.Count();
    var CountOtherInfo = Model.ObjContactReferences.Count();
    var CountEmployment = Model.ObjContactEmployments.Count() + Model.ObjContactAchievement.Count();
    var CountPublicationHistory = Model.ObjContactPublicationHistory.Count();
    var CountSpeakingEvent = Model.ObjContactSpeakingEventHistory.Count();
    var CountAssociation = Model.ObjContactAssociations.Count();
    var CountLanguages = Model.ObjContactLanguages.Count();
}

<style>
    input, select color, .question-head, .question-dtl-lbl, .answerComment, .OfferBox > label, .previous-remarks {
        color: #345E8E;
    }
       

    .ProfileAction {
        overflow: hidden;
        padding: 3px 0;
        text-align: center;
        width: 100%;
    }

    .ProfileHeader {
        border-bottom: 3px solid #345E8E;
        width: 100%;
        overflow: hidden;
    }

        .ProfileHeader > table {
            width: 100%;
            margin-top: 5px;
            border: 0;
        }

            .ProfileHeader > table .logo {
                height: 30px;
                width: auto;
            }

    .ProfileContent {
        overflow: hidden;
        width: 100%;
    }


    .CandidateDetails {
        overflow: hidden;
        padding: 12px 0;
        width: 100%;
    }

        .CandidateDetails > span {
            font-size: 17px;
            width: 100%;
            overflow: hidden;
        }

    .score, .checkbox, #AnsScore {
        border: 1px solid #bec0c4;
        height: 22px !important;
    }

    .question-dtl-lbl {
        padding: 3px 0 !important;
        width: 30%;
        clear: left;
    }


    .question-dtl-value {
        padding: 3px 0 3px 1% !important;
        width: 68%;
    }

        .question-dtl-value.slider {
            height: 28px !important;
            padding-left: 1% !important;
            width: auto;
        }

    .box .detail-select {
        margin-bottom: 2% !important;
    }

    .input-details {
        padding: 2px !important;
        margin-bottom: 5px !important;
        border: 1px solid #bec0c4 !important;
    }

    .previous-remarks {
        height: auto !important;
    }

    .answerComment {
        border: 1px solid #bec0c4;
        box-sizing: border-box;
        height: auto;
        margin-bottom: 4px;
        min-height: 22px;
        padding-left: 2px;
    }

    .OfferMain {
        /*background-color: #f3f3f3;
        border: 1px solid #99ccff;*/
        margin: 10px 0 10px 2%;
        overflow: hidden;
        position: relative;
        width: 97.5%;
    }

    .OfferBox input[type="text"], .OfferBox textarea {
        font-size: 11px !important;
        font-family: Arial,Helvetica,sans-serif;
    }


    .ATSPickList select, .ATSYesNo select {
        width: 100% !important;
    }

    .score, .checkbox, #AnsScore {
        border: 1px solid #bec0c4;
        font-size: 11px;
        height: 19px;
        padding-left: 1%;
        width: 98.5%;
    }

    .vacancy-quest-box {
        float: right;
        padding: 5px 1%;
        width: 96%;
    }

    /*div.acc-header:hover {
        background-color: #ffffff !important;
    }*/

    .QuestionHeader {
        float: left;
        padding: 3px 0;
        width: 98% !important;
    }

        .QuestionHeader > span {
            font-weight: bold;
        }


    

    .acc-Content {
        background: none repeat scroll 0 0 transparent !important;
        border: 0 none !important;
        clear: both;
        overflow: hidden !important;
        padding: 0 10px !important;
    }

        .acc-Content > table {
            margin-top: 10px;
        }


    .prfle-tab-head, .prfle-tab-head-brown {
        padding-top: 9px;
        overflow: hidden;
    }

    .previous-remarks {
        background: none repeat scroll 0 0 #ffffff;
        float: left;
        overflow-y: auto;
        padding: 3px;
        width: 98%;
        font-size: 11px;
        margin-left: 0px !important;
    }

    .FullTextboxProfile {
        width: 688px !important;
    }

    .box > .txtarea {
        height: 60px !important;
        padding: 2px 0.5% 2px 1%;
        resize: none;
        width: 688px !important;
    }

    .box .detail-input-halfcontainer {
        border: 1px solid #bec0c4;
        float: left;
        margin-bottom: 3%;
        overflow: hidden;
        padding-right: 2%;
        width: 48%;
        height: 22px !important;
    }
    .hrs-input
    {
        width: 130px !important;
    }
</style>

@if (Model.isShowHeader != true)
{
    <style>
        body {
            background-color: #e1e1e1;            
        }

        .ProfileMain {
            background-color: #fff;
            box-shadow: 0 0 6px #333333;
            margin: 7px auto;
            overflow: hidden;
            padding: 10px;
            width: 800px;
        }
    </style>
    <div class="ProfileHeader">
        <table>
            <tr>
                <td style="color: #953634; vertical-align: bottom; font-size: 20px; width: 33%;">Applicant Profile</td>
                <td style="color: #345E8E; vertical-align: bottom; text-align: center; ">@DateTime.Now.ToString("MMM dd, yyyy - hh:mm tt")</td>
                <td style="float: right;"><img class="logo" src="~/Content/images/splashtrack_logo_2.png" alt="SplashTrack" /></td>
            </tr>
        </table>
    </div>
}
else
{
    <style>
        body {
            background-color: transparent;
        }

        .hideHeader {
            display: none !important;
        }
        .OW25 {
            width: 23% !important;
        }

        .OW50 {
            width: 46% !important;
        }

        .OW100 {
            width: 92% !important;
        }
    </style>
}

<div class="CandidateDetails">
    <span style="color: #953634; font-weight: bold">Applicant: </span>
    <span style="color: #345E8E">@Model.objUserDetails.FirstName  @Model.objUserDetails.LastName</span>
</div>

<div id="ProfileAccordion">
    @if (Request.QueryString["ApplicationId"].ToString() != Guid.Empty.ToString())
    {
        <div class=" acc-header">
            <p class="prfle-tab-head">
                @Html.Label("Applications")
                <span class='ttldbrown count'>(@Model.ObjApplications.Count())</span>
            </p>
        </div>
        <div class="acc-Content">
            <div class="acc-inner">
                <div class="AccApplication w100">
                    @Html.Partial("Shared/_AccApplicationList", Model.ObjApplications)
                </div>
            </div>
        </div>
        <br clear="all" />
    }

    @Html.Partial("Shared/_PersonalInfo", Model.objUserDetails)

    <br clear="all" />

    @*@Html.Partial("Shared/_Availability", Model.ObjAvailability)

    <div class="acc-header">
        <p class="prfle-tab-head">
            @Html.Label("Resume Summary")
        </p>
    </div>
    <div class="acc-Content">
        <div class="acc-inner">
            <div class="SubAccordion">
                @Html.Partial("Shared/_ExecutiveSummary", Model.ObjExecutiveSummary)
                @Html.Partial("Shared/_Objective", Model.ObjObjective)
            </div>
        </div>
    </div>*@

    <div class="acc-header">
        <p class="prfle-tab-head">
            @Html.Label("Employment")
            <span class='ttldbrown count'>
                (@CountEmployment)
            </span>
        </p>
    </div>
    <div class="acc-Content">
        <div class="acc-inner">
            <div class="SubAccordion">
                <div class="acc-header">
                    <p class="prfle-tab-head-brown">
                        @Html.LanguageLabel("Job History")
                        <span class='ttldb count'>(@Model.ObjContactEmployments.Count())</span>
                    </p>
                </div>
                <div class="acc-Content">
                    <div class="SubAccordion" id="accJobHistories">
                        @foreach (BEClient.EmploymentHistory _currentEmployment in Model.ObjContactEmployments)
                        {
                            @Html.Partial("Shared/_JobHistory", _currentEmployment)
                        }
                    </div>
                </div>

                <div class="acc-header">
                    <p class="prfle-tab-head-brown">
                        @Html.LanguageLabel("Achievements")
                        <span class='ttldb count'>(@Model.ObjContactAchievement.Count())</span>
                    </p>
                </div>
                <div class="acc-Content">
                    <div class="SubAccordion" id="accAchievements">
                        @foreach (BEClient.Achievement _currentAchievement in Model.ObjContactAchievement)
                        {
                            @Html.Partial("Shared/_Achievement", _currentAchievement)
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="acc-header">
        <p class="prfle-tab-head">
            @Html.LanguageLabel(ATS.BusinessEntity.Common.SkillAndQualificationConstant.FRM_PRF_TTL_SKILLS_AND_QUALIFICATIONS)
            <span class='ttldb count' style="color:#953634;">
                (@CountSkills)
            </span>
        </p>
    </div>
    <div class="acc-Content">
        <div class="SubAccordion" id="accSkills">
            @foreach (BEClient.Skills _currentSkills in Model.ObjContactSkills)
                {
                @Html.Partial("Shared/_SkillsAndQualifications", _currentSkills)
                }
        </div>
    </div>

    <div class="acc-header">
        <p class="prfle-tab-head">
            @Html.Label("Educational Background")
            <span class='ttldb count' style="color:#953634;">
                (@CountEduBackground)
            </span>
        </p>
    </div>
    <div class="acc-Content">
        <div class="acc-inner">
            <div class="SubAccordion">
                <div class="acc-header">
                    <p class="prfle-tab-head-brown">
                        @Html.LanguageLabel("Education")
                        <span class='ttldb count'>(@Model.ObjContactEducations.Count())</span>
                    </p>
                </div>
                <div class="acc-Content">
                    <div class="SubAccordion" id="accEducations">
                        @foreach (BEClient.EducationHistory _currentEducationHistory in Model.ObjContactEducations)
                        {
                            @Html.Partial("Shared/_Education", _currentEducationHistory)
                        }
                    </div>
                </div>

                <div class="acc-header">
                    <p class="prfle-tab-head-brown">
                        @Html.LanguageLabel(ATS.BusinessEntity.Common.LicenceAndCertificationsConstant.FRM_TITL_LICENCEANDCERTIFICATIONS)
                        <span class='ttldb count'>(@Model.ObjContactLicenceAndCertifications.Count())</span>
                    </p>
                </div>
                <div class="acc-Content">
                    <div class="SubAccordion" id="accLicenceAndCertifications">
                        @foreach (BEClient.LicenceAndCertifications _currentLicenceAndCertifications in Model.ObjContactLicenceAndCertifications)
                        {
                            @Html.Partial("Shared/_LicenceAndCertifications", _currentLicenceAndCertifications)
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="acc-header">
        <p class="prfle-tab-head">
            @Html.Label("Extracurricular")
            <span class='ttldb count' style="color:#953634;">
                (@CountExtraCurr)
            </span>
        </p>
    </div>
    <div class="acc-Content">
        <div class="acc-in">
            <div class="SubAccordion">
                <div class="acc-header">
                    <p class="prfle-tab-head-brown">
                        @Html.LanguageLabel(ATS.BusinessEntity.Common.PublicationHistoryConstant.FRM_PUB_TITL_PUBLICATION)
                        <span class='ttldb count'>(@CountPublicationHistory)</span>
                    </p>
                </div>
                <div class="acc-Content">
                    <div class="SubAccordion" id="accPublicationHistory">
                        @foreach (BEClient.PublicationHistory _currentPublicationHistory in Model.ObjContactPublicationHistory)
                        {
                            @Html.Partial("Shared/_PublicationHistory", _currentPublicationHistory)
                        }
                    </div>
                </div>

                <div class="acc-header">
                    <p class="prfle-tab-head-brown">
                        @Html.LanguageLabel(ATS.BusinessEntity.Common.SpeakingEventHistoryConst.FRM_SPK_TITL_SPEAKINGEVENTHISTORY)
                        <span class='ttldb count'>(@CountSpeakingEvent)</span>
                    </p>
                </div>
                <div class="acc-Content">
                    <div class="SubAccordion" id="accSpeakingEventHistory">
                        @foreach (BEClient.SpeakingEventHistory _currentSpeakingEventHistory in Model.ObjContactSpeakingEventHistory)
                        {
                            @Html.Partial("Shared/_SpeakingEventHistory", _currentSpeakingEventHistory)
                        }
                    </div>
                </div>

                <div class="acc-header">
                    <p class="prfle-tab-head-brown">
                        @Html.LanguageLabel(ATS.BusinessEntity.Common.AssociationsConst.FRM_ASC_TITLE_ASSOCIATION)
                        <span class='ttldb count'>(@CountAssociation)</span>
                    </p>
                </div>
                <div class="acc-Content">
                    <div class="SubAccordion" id="accAssociation">
                        @foreach (BEClient.Associations _currentAssociations in Model.ObjContactAssociations)
                        {
                            @Html.Partial("Shared/_Associations", _currentAssociations)
                        }
                    </div>
                </div>

                <div class="acc-header">
                    <p class="prfle-tab-head-brown">
                        @Html.LanguageLabel(ATS.BusinessEntity.Common.LanguagesConst.FRM_LAN_TITLE_LANGUAGES)
                        <span class='ttldb count'>(@CountLanguages)</span>
                    </p>
                </div>
                <div class="acc-Content">
                    <div class="SubAccordion" id="accLanguages">
                        @foreach (BEClient.Languages _currentlanguages in Model.ObjContactLanguages)
                        {
                            @Html.Partial("Shared/_Languages", _currentlanguages)
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="acc-header">
        <p class="prfle-tab-head">
            @Html.Label("References")
            <span class='ttldb count' style="color:#953634;">
                (@CountOtherInfo)
            </span>
        </p>
    </div>
    <div class="acc-Content">      
            <div class="acc-Content">
                <div class="SubAccordion" id="accReferences">
                    @foreach (BEClient.References _currentreferences in Model.ObjContactReferences)
                    {
                        @Html.Partial("Shared/_References", _currentreferences)
                    }
                </div>           
    </div>
    <div class="acc-header">
        <p class="prfle-tab-head">
            @Html.Label("Other Information")
            <span class='ttldb count' style="color:#953634;">
                (@CountOtherInfo)
            </span>
        </p>
    </div>
    <div class="acc-Content">
        <div class="SubAccordion">
            @Html.Partial("Shared/_AlternativeEmrContact", Model.objUserDetails)
           
        </div>
    </div>
</div>