@using BEClient = ATS.BusinessEntity
@model List<BEClient.VacancyHistory>


@if (Model.Count > 0)
{
    <div class="previous-remarks" style="position:relative;">
        <div class="daysopen">Days Open: @Model[0].DaysOpen</div>
        <ul>
            @foreach (BEClient.VacancyHistory _curr in Model)
            {
                <li>@_curr.UpdatedOn.ToString("MM/dd/yy hh:mmtt").ToLower()@Html.Raw(" UTC: ") @_curr.Description</li>
            }
        </ul>
    </div>
}
else
{
    <div class="daysopenNA">
        Vacancy History Not Available
        <div class="daysopen" style="right:1px;">Days Open: 0</div>
    </div>
}